<h1>Lista de Usuários</h1>

<%= link_to 'Voltar para a Home', root_path %>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Email</th>
      <th>Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @resources.each do |user| %>
      <tr>
        <td><%= user.nome %></td>
        <td><%= user.email %></td>
        <td>
          <%= link_to 'Mostrar', user %>
          <%= link_to 'Editar', edit_user_path(user) %>
          <%= link_to 'Deletar', user, method: :delete, data: { confirm: 'Tem certeza?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Novo Usuário', new_user_path %>