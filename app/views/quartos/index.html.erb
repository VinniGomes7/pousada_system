<h1>Lista de Quartos</h1>

<%= link_to 'Voltar para a Home', root_path %>

<table>
  <thead>
    <tr>
      <th>Número</th>
      <th>Descrição</th>
      <th>Preço da Diária</th>
      <th>Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @quartos.each do |quarto| %>
      <tr>
        <td><%= quarto.numero %></td>
        <td><%= quarto.descricao %></td>
        <td><%= number_to_currency(quarto.preco_diaria) %></td>
        <td>
          <%= link_to 'Mostrar', quarto %>
          <%= link_to 'Editar', edit_quarto_path(quarto) %>
          <%= link_to 'Deletar', confirm_delete_quarto_path(quarto), class: 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Novo Quarto', new_quarto_path %>