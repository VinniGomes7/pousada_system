<%= form_with(model: @quarto, local: true) do |form| %>
  <% if @quarto.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@quarto.errors.count, "erro") %> proibiu este quarto de ser salvo:</h2>
      <ul>
        <% @quarto.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :numero %>
    <%= form.text_field :numero %>
  </div>

  <div class="field">
    <%= form.label :descricao %>
    <%= form.text_area :descricao %>
  </div>

  <div class="field">
    <%= form.label :preco_diaria %>
    <%= form.number_field :preco_diaria %>
  </div>

  <div class="field">
    <%= form.label :capacidade_maxima %>
    <%= form.number_field :capacidade_maxima %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>